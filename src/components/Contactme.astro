---
//components
import BtnContactame from "./BtnContactame.astro";

//Bootstrap
import "bootstrap/dist/css/bootstrap.min.css";

//CSS
import "../styles/contactme.css"
---


<section class="form-wrapper">
  <form>
    <div class="custom-card">
      <div class="form-group">
        <h1 class="tittle">Ingrese su correo electrónico</h1>
        <input
          type="email"
          class="form-control"
          placeholder="ejemplo@correo.com"
          style="color: aliceblue;"
        />
      </div>

      <div class="form-group">
        <h1 class="tittle">¿Cuál es su nombre?</h1>
        <input
          type="text"
          class="form-control"
          placeholder="Escribe tu nombre"
          style="color: aliceblue;"
        />
      </div>

      <div class="form-group">
        <h1 class="tittle">¿Cuál es su número telefónico?</h1>
        <input type="tel" class="form-control" placeholder="Tu número" style="color: aliceblue;" />
      </div>

      <div class="form-group">
        <h1 class="tittle">Motivo</h1>
        <input
          type="text"
          class="form-control"
          placeholder="Escribe el motivo"
          style="color: aliceblue;"
        />
      </div>

      <div class="text-center">
        <BtnContactame />
      </div>
    </div>
  </form>
</section>
