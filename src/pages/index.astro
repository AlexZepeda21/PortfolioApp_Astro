---
import Layout from "../layouts/Layout.astro";
import ContactmeComponent from "../components/Contactme/ContactmeComponent.astro";
import Me from "./me.astro";

// Aqu√≠ importamos el componente React como un componente de Astro

import "../styles/global.css";
import "../styles/index.css";
import "bootstrap/dist/css/bootstrap.min.css";

import MainProject from "../components/Projects/MainProject";
import Presentation from "./presentation.astro";
import WorkTogether from "./WorkTogether.astro";
import Experience from "./experience.astro";
---

<Layout>
    <main class="Sections">
        <section
            id="presentation"
            class="s1 container-main justify-content-center align-items-center min-vh-100"
        >
            <Presentation />
        </section>

        <section
            id="projets"
            class="s2 container-main d-flex justify-content-center align-items-center min-vh-100"
        >
            <MainProject client:only />
        </section>

        <section
            id="together"
            class="s3 container-main d-flex justify-content-center align-items-center min-vh-100"
        >
            <WorkTogether />
        </section>

        <section
            id="experience"
            class="s4 container-main d-flex justify-content-center align-items-center min-vh-100"
        >
            <Experience />
        </section>

        <section
            id="contactme"
            class="s5 container-main d-flex justify-content-center align-items-center min-vh-100"
        >
            <ContactmeComponent />
        </section>

        <section
            id="me"
            class="s6 container-main d-flex justify-content-center align-items-center min-vh-100"
        >
            <Me />
        </section>
    </main>
</Layout>
