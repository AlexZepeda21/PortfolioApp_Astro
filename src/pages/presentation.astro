    /* Info section */
    .info-section {
      text-align: center;
      position: relative;
    }

    @media (min-width: 768px) {
      .info-section {
        text-align: left;
        flex: 1;
        padding-left: 3rem;
      }

      .info-section::before {
        content: "";
        position: absolute;
        left: 0;
        top: 10%;
        height: 80%;
        width: 3px;
        background: linear-gradient(to bottom, #4f6bda, transparent);
        border-radius: 3px;
      }
    }

    .name-title {
      font-size: 4rem;
      margin-bottom: 1.8rem;
      background: linear-gradient(
        to right,
        var(--color-purple),
        var(--color-pink)
      );
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      font-weight: 800;
      letter-spacing: -0.03em;
      position: relative;
      display: inline-block;
    }

    .name-title::after {
      content: "";
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 60px;
      height: 4px;
      background: linear-gradient(to right, #4f6bda, #1530a9);
      border-radius: 2px;
    }

    @media (min-width: 768px) {
      .name-title::after {
        width: 100px;
      }
    }

    .info-items {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .info-item {
      margin: 0;
      position: relative;
      transition: transform 0.3s ease;
    }

    .info-item:hover {
      transform: translateX(5px);
    }

    .info-code {
      font-weight: 600;
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      -webkit-text-fill-color: transparent;
      font-size: 1.35rem;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      background: linear-gradient(
        to right,
        var(--color-purple),
        var(--color-pink)
      );
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      display: inline-block;
    }

    /* Description section */
    .description-container {
      margin: 2.5rem 0;
      padding: 2rem;
      border-radius: 12px;
      background-color: rgba(21, 48, 169, 0.08);
      border: 1px solid rgba(79, 107, 218, 0.2);
      backdrop-filter: blur(8px);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      position: relative;
      overflow: hidden;
    }

    .description-container::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(to right, #4f6bda, #1530a9);
    }

    .description-text {
      text-align: center;
      color: white;
      line-height: 1.8;
      font-size: 1.15rem;
      font-weight: 400;
      letter-spacing: 0.01em;
    }

