    .styleButton {
      color: white;
      opacity: 80%;
    }
    .presentation-container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 2.5rem;
      background: rgba(21, 48, 169, 0.03);
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(15, 23, 42, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(79, 107, 218, 0.1);
    }

    /* Header section with profile and info */
    .presentation-header {
      display: flex;
      flex-direction: column;
      gap: 2.5rem;
      align-items: center;
      margin-bottom: 3.5rem;
    }

    @media (min-width: 768px) {
      .presentation-header {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      }
    }

    /* Profile section */
    .profile-section {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }

    .profile-image-container {
      position: relative;
      display: inline-block;
      border-radius: 12px;
      overflow: hidden;
    }

    .profile-image-container::before {
      content: "";
      position: absolute;
      inset: 0;
      background: linear-gradient(
        135deg,
        rgba(79, 107, 218, 0.2),
        rgba(21, 48, 169, 0.2)
      );
      z-index: 1;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .profile-image-container:hover::before {
      opacity: 1;
    }

    .profile-image-container::after {
      content: "";
      position: absolute;
      top: -10px;
      left: -10px;
      right: -10px;
      bottom: -10px;
      background: linear-gradient(135deg, #4f6bda 0%, #1530a9 100%);
      z-index: -1;
      filter: blur(15px);
      opacity: 0.6;
      border-radius: 12px;
      transition: all 0.5s ease;
    }

    .profile-image-container:hover::after {
      opacity: 0.8;
      filter: blur(20px);
    }

    .profile-image {
      width: 220px;
      height: auto;
      border-radius: 12px;
      border: 3px solid rgba(79, 107, 218, 0.4);
      object-fit: cover;
      transition:
        transform 0.5s ease,
        filter 0.3s ease;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
      filter: contrast(1.05) brightness(1.05);
    }

    .profile-image:hover {
      transform: translateY(-7px) scale(1.02);
    }

