---
import miImg from "../assets/images/miImg.png";
import BtnCode from "../components/Buttons/BtnCode";


const nameCode = "Disponible para trabajar";
const link = "https://www.linkedin.com/in/manuel-zepeda-79383a33a/";
---

<div class="presentation-container">
  <div class="presentation-header">
    <div class="profile-section">
      <div class="profile-image-container">
        <img
          src={miImg.src || "/placeholder.svg"}
          class="profile-image"
          alt="Manuel Zepeda"
        />
      </div>
      <div>
        <BtnCode nameButton={nameCode} link={link} client:load />
      </div>
    </div>

    <div class="info-section">
      <h1 class="name-title">Manuel Zepeda</h1>
      <div class="info-items">
        <h3 class="info-item">
          <code class="info-code">Desarrollador Full Stack</code>
        </h3>
        <h3 class="info-item">
          <code class="info-code">+503 7755-9566</code>
        </h3>
        <h3 class="info-item">
          <code class="info-code">{"</>"}</code>
        </h3>
      </div>
    </div>
  </div>

  <div class="description-container">
    <p class="description-text">
      Técnico en ingeniería en desarrollo de software con bases robustas en
      frontend y backend con experiencia en múltiples frameworks y buenas
      prácticas de programación para llevar tus aplicaciones al siguiente nivel.
    </p>
  </div>

  <style>
    /* Container styles */
    :root {
      --color-card: #121218;
      --color-border: #1e1e2a;
      --color-text: #ffffff;
      --color-text-secondary: #a0a0b0;
      --color-purple: #a78bfa;
      --color-pink: #4f6bda;
      --border-radius: 12px;
      --transition-standard: all 0.3s ease;
    }

